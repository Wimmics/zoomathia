@prefix xrr: <http://i3s.unice.fr/xr2rml#> .
@prefix rr:  <http://www.w3.org/ns/r2rml#> .
@prefix rml: <http://semweb.mmlab.be/ns/rml#> .
@prefix rdfs:   <http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl:    <http://www.w3.org/2002/07/owl#>.
@prefix xsd:    <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix zoo:   <http://www.zoomathia/2024/zoo#> .

@prefix bibo:   <http://purl.org/ontology/bibo/> .
@prefix dce:    <http://purl.org/dc/elements/1.1/>.
@prefix dct:    <http://purl.org/dc/terms/>.
@prefix fabio:  <http://purl.org/spar/fabio/> .
@prefix foaf:   <http://xmlns.com/foaf/0.1/>.
@prefix frbr:   <http://purl.org/vocab/frbr/core#>.
@prefix oa:     <http://www.w3.org/ns/oa#>.
@prefix prov:   <http://www.w3.org/ns/prov#>.
@prefix schema: <http://schema.org/>.

<#paragraph>
	a rr:TripleMap;
	xrr:logicalSource [
		xrr:query """db.paragraph.find()""";
	];
	
	rr:subjectMap [
		rr:template "http://www.zoomathia.com/{$.work_title}/{$.div_id}/{$.index_paragraph}";
		rr:class zoo:Paragraph;
	];
	
	rr:predicateObjectMap [
		rr:predicate schema:isPartOf;
		rr:objectMap [
			rr:template "http://www.zoomathia.com/{$.work_title}/{$.div_id}";
		];
	];
	
	rr:predicateObjectMap [
		rr:predicate schema:text;
		rr:objectMap [
			xrr:reference "$.latin_text";
		];
	].
<#book>
	a rr:TripleMap;
	xrr:logicalSource [
		xrr:query """db.paragraph.find()""";
	];
	
	rr:subjectMap [
		rr:template "http://www.zoomathia.com/{$.work_title}/{$.div_id}";
		rr:class zoo:Book;
	];
	
        rr:predicateObjectMap [
		rr:predicate schema:identifier;
		rr:objectMap [
			xrr:reference "$.div_id";
		];
	];


       rr:predicateObjectMap [
		rr:predicate schema:hasPart;
		rr:objectMap [
			rr:template "http://www.zoomathia.com/{$.work_title}/{$.div_id}/{$.index_paragraph}";
		];
	];
	
	rr:predicateObjectMap [
		rr:predicate schema:title;
		rr:objectMap [
			xrr:reference "$.div_title";
		];
	];
        rr:predicateObjectMap [
		rr:predicate schema:isPartOf;
		rr:objectMap [
			rr:template "http://www.zoomathia.com/{$.work_title}";
		];
	].

<#creativeWork>
	a rr:TripleMap;
	xrr:logicalSource [
		xrr:query """db.paragraph.find()""";
	];
	
	rr:subjectMap [
		rr:template "http://www.zoomathia.com/{$.work_title}";
		rr:class zoo:Oeuvre;
	];
	
        rr:predicateObjectMap [
		rr:predicate schema:identifier;
		rr:objectMap [
			xrr:reference "$.work_title";
		];
	];

	rr:predicateObjectMap [
		rr:predicate schema:editor;
		rr:objectMap [
			xrr:reference "$.editor";
		];
	];

	rr:predicateObjectMap [
		rr:predicate schema:date;
		rr:objectMap [
			xrr:reference "$.date";
		];
	];

       rr:predicateObjectMap [
		rr:predicate schema:hasPart;
		rr:objectMap [
			rr:template "http://www.zoomathia.com/{$.work_title}/{$.div_id}";
		];
	];
	
	rr:predicateObjectMap [
		rr:predicate schema:author;
		rr:objectMap [
			xrr:reference "$.author";
		];
	].
